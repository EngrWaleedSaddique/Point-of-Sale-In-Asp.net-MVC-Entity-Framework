
@{
    ViewBag.Title = "OrderDetails";
}

<style>
    @@media print {
    body * {
        visibility: hidden;
    }

    .print * {
        visibility: visible;
    }
    #print{
        visibility:hidden;
    }
    .heading *{
        visibility:visible;
    }
    .div2 {
        position: absolute;
        top: 40px;
        left: 30px;
    }
}
</style>



<div class="container print">
    <div class="text-center">
        <h2>Order Details</h2>
    </div>
    <div class="heading">
        <h3 class="text-center">Date: @ViewBag.OrderDate</h3>
    </div>

    <div class="table-responsive">
        <table class="table display responsive nowrap" id="purchaseItems">
            <thead class="">
                <tr>
                    <th>PO ID</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.data)
                {
                    <tr>
                        <td>@item.PurchaseOrderNo</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>Rs: @item.Amount/=</td>
                    </tr>
                }
            </tbody>
            <tfoot>

                <tr>
                    <td colspan="4" class="text-right">
                        <b>Total Amount</b>
                        <b>Rs: @ViewBag.totalAmount/=</b>
                    </td>
                    <td colspan="4">
                        <button id="print" class="btn btn-primary">Print</button>
                    </td>
                </tr>
            </tfoot>
        </table>


    </div>
</div>
<script>
    $(document).ready(function () {
        $("#print").click(function () {
            window.print(); 
        });
    });
</script>

